<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/gris">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Busqueda por codigo" android:layout_marginLeft="10dp"
              android:layout_marginTop="20dp" android:textSize="20dp"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/txtcodigo"
              android:hint="Ingrese el codigo"
              android:inputType="number"
              android:shadowDx="-8"
              android:shadowDy="-9"
              android:shadowRadius="5"
              android:paddingLeft="25dp"
              android:layout_marginLeft="12dp"
              android:layout_marginTop="55dp"
              android:drawableStart="@drawable/ic_num"
              android:drawablePadding="5dp"
              android:layout_marginRight="12dp"/>

    <Button
            android:id="@+id/btn_buscar" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="62dp"
            android:layout_marginRight="100dp" android:layout_marginTop="140dp"
            android:text="Buscar"  android:textColor="#fff"
            android:shadowColor="#2314A8" android:shadowDx="-3"
            android:shadowDy="0" android:shadowRadius="8"
            android:drawableStart="@drawable/ic_buscar" android:paddingLeft="10dp"
            android:drawablePadding="0dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent" android:gravity="right"
            android:layout_height="match_parent">
        <TextView android:layout_width="30dp" android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                  android:layout_marginBottom="25dp" android:textColor="#ff0000"
                  android:text="X" android:textAlignment="center"
                  android:textSize="20dp" android:background="@drawable/ic_salir"
                  android:layout_marginRight="10dp" android:id="@+id/txt"/>

    </LinearLayout>

</RelativeLayout>